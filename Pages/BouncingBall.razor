@page "/bouncing_ball"
@using System

<h1>Bouncing Ball</h1>

<hr>
@{
    //initial pattern

        b=new Data.Ball(3,3,2,e);
        e.insert(3,3,b);

}
<table class = "environment">
    @for(var i=0; i< @e.total_of_rows(); i++){
        <tr>
            @for(var j=0; j< @e.total_of_cols(); j++){
                if(e.ballunit(i,j)!=null){
                    <td class="cell" style="background-color:@e.ballunit(i,j).myColor()"></td>

                    @* if(e.biounit(i,j)!=null){
                    <td class="cell" style="background-color:@e.biounit(i,j).myColor()"></td>
                    } *@
                }
                else
                {
                    <td class="cell dead"></td>
                }
            }
        </tr>
    }
</table>

@code {
    private Data.BallEnvironment e = new Data.BallEnvironment(40,40);
    private Data.Ball b;

}